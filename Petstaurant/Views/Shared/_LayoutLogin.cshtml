<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Petstaurant</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />

    <meta content="" name="description">
    <meta content="" name="keywords">

    <!--Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Template Main CSS -->

    <link rel="stylesheet" href="~/css/petstyle.css" />

</head>
<body>


    <!--Header and nav-->
    <style>
        body {
            background: url(../pics/backdog.jpg) no-repeat center center fixed;
            background-size: cover;
        }

        .container {
            padding-top: 8% !important;
            padding-left: 5%;
        }
    </style>
    <header id="header" class="fixed-top border-warning d-flex justify-content-center">
        <div class="container-fluid container-xl justify-content-lg-between">
            <nav id="navber " class="navbar navbar-expand-lg navbar-light bg-transparent">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/Users/Login">Petstaurant</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"  style="background-color: #FFC107;">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a asp-controller="Dishes" asp-action="Index" class="nav-link  text-warning active" aria-current="page">Menu</a>
                            </li>
                            <li class="nav-item d-grid gap-2 d-md-flex">
                                <a class="nav-link text-warning" asp-controller="Home" asp-action="AboutPetstaurant">About</a>
                                <a class="nav-link text-warning" asp-controller="Home" asp-action="TheCrew">Our Crew</a>

                            </li>
                            <li class="dropdown nav-item px-2">
                                <a class="btn btn-secondary dropdown-toggle btn-sm" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                    Our Locations
                                </a>

                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <li><a class="dropdown-item" asp-controller="Stores" asp-action="Kmalachi">Kiryat-Malachi</a></li>
                                    <li><a class="dropdown-item" asp-controller="Stores" asp-action="TLVcity">Tel Aviv</a></li>
                                    <li><a class="dropdown-item" asp-controller="Stores" asp-action="BshevaCity">Beer-Sheva</a></li>
                                    <li><a class="dropdown-item" asp-controller="Stores" asp-action="JerusalemCity">Jerusalem</a></li>
                                </ul>
                            </li>
                        </ul>
                        <div class="d-grid gap-2 d-md-flex">
                            <form method="get">
                                @if (Context.User != null && Context.User.Claims != null && Context.User.Claims.Count() > 0)
                                {
                                    <button asp-controller="Carts" asp-action="Details" class="btn btn-outline-warning">Shopping Cart</button>
                                    <button asp-controller="Users" asp-action="Logout" class="btn btn-outline-warning">Logout</button>
                                }
                                else
                                {
                                    <button asp-controller="Users" asp-action="Login" class="btn btn-outline-warning">Login</button>
                                    <button asp-controller="Users" asp-action="Register" class="btn btn-outline-warning">Sign Up</button>
                                }
                            </form>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--Footter-->


    <footer id="footer">
        <div class="row align-items-center justify-content-center">

            <div class="social-links col-lg-12 col-md-12 text-center">
                <span class="h3">Join Our Community</span>
                <a class="fa bi bi-telephone" data-bs-toggle="modal" data-bs-target="#exampleModal"></a>
                <a href="mailto:emil@kollek.net" class="fa bi bi-envelope"></a>
                <a href="#" class="fa fa-facebook"></a>
                <a href="#" class="fa fa-twitter"></a>

            </div>
            <div class="row text-center">
                <div class="col-lg-12">
                    <p style="margin-bottom: 0;">© 2021 - Shimon Adar Emil</p>
                </div>
            </div>
        </div>
    </footer>

    <!--Modal-->

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="color:black;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Our Phone Number</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <h5>+972 33-meow-woof-66783</h5>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary-warning" data-bs-dismiss="modal">Close</button>
                 </div>
            </div>
        </div>
    </div>

    <!-- JavaScript Bundle with Popper -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
