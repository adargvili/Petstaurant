<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Petstaurant</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />

    <meta content="" name="description">
    <meta content="" name="keywords">

    <!--Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Template Main CSS -->

    <link rel="stylesheet" href="~/css/petstyle.css" />
    @await RenderSectionAsync("StyleSheets", required: false)
</head>
<body>


    <!--Header and nav-->


    <style>
        body {
            background: url(/pics/backdog.jpg) no-repeat center center fixed;
            background-size: cover;
        }
    </style>
    <header id="header" class="border-warning d-flex justify-content-center">
        <div class="container-xl justify-content-lg-between">
            <nav id="navber " class="navbar navbar-expand-lg navbar-light bg-transparent">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/Home/Index">Petstaurant</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a href="/Dishes/Index" class="nav-link  text-warning active" aria-current="page">Menu</a>
                            </li>
                            <li class="nav-item d-grid gap-2 d-md-flex">
                                <a class="nav-link text-warning" href="#">About</a>
                                <a class="nav-link text-warning" href="#">Our Crew</a>

                            </li>
                            <li class="dropdown nav-item px-2">
                                <a class="btn btn-secondary dropdown-toggle btn-sm" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                    Our Locations
                                </a>

                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <li><a class="dropdown-item" href="#">Tel Aviv</a></li>
                                    <li><a class="dropdown-item" href="#">Beer-Sheva</a></li>
                                    <li><a class="dropdown-item" href="#">Jerusalem</a></li>
                                    <li><a class="dropdown-item" href="#">Kiryat-Malachi</a></li>
                                </ul>
                            </li>

                        </ul>
                        <div class="d-grid gap-2 d-md-flex">
                            <form method="get">
                                @if (Context.User != null && Context.User.Claims != null && Context.User.Claims.Count() > 0)
                                {
                                    var uname = Context.User.Claims.FirstOrDefault().Value;
                                    <button asp-controller="Users" asp-action="Details" asp-route-id="@uname" class="btn btn-outline-warning">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
                                            <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2z"></path>
                                        </svg>
                                    </button>
                                    <button asp-controller="Carts" asp-action="Details" class="btn btn-outline-warning">Shopping Cart</button>
                                    <button asp-controller="Users" asp-action="Logout" class="btn btn-outline-warning">Logout</button>
                                }
                                else
                                {
                                    <button asp-controller="Users" asp-action="Login" class="btn btn-outline-warning">Login</button>
                                    <button asp-controller="Users" asp-action="Register" class="btn btn-outline-warning">Sign Up</button>
                                }
                            </form>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--Footter-->


    <footer id="footer">
        <div class="row align-items-center justify-content-center">

            <div class="social-links col-lg-12 col-md-12 text-center">
                <span class="h3">Join Our Community</span>
                <a class="fa bi bi-telephone"></a>
                <a href="mailto:emil@kollek.net" class="fa bi bi-envelope"></a>
                <a href="https://www.facebook.com/Petstaurant-179681804167075/" target="_blank" class="fa fa-facebook"></a>
                <a href="https://twitter.com/PetStaurant" target="_blank" class="fa fa-twitter"></a>

            </div>
            <div class="row text-center">
                <div class="col-lg-12">© 2021 - Shimon Adar Emil</div>
            </div>
        </div>
    </footer>

    <!-- JavaScript Bundle with Popper -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
