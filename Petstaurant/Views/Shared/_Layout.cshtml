<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Petstaurant</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />


    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">


    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <link href="../wwwroot/lib/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">




    <!-- Template Main CSS -->

    <link rel="stylesheet" href="~/css/petstyle.css" />


</head>
<body>




    <!--Header and nav-->

    <header id="header" class="fixed-top border-warning d-flex justify-content-center">
        <div class="container-fluid container-xl justify-content-lg-between">
            <nav id="navber " class="navbar navbar-expand-lg navbar-light bg-transparent">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Petstaurant</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link  text-warning active" aria-current="page" href="#">Menu</a>
                            </li>
                            <li class="nav-item d-grid gap-2 d-md-flex">
                                <a class="nav-link text-warning" href="#">About</a>
                                <a class="nav-link text-warning" href="#">Our Crew</a>

                            </li>
                            <li class="dropdown nav-item px-2">
                                <a class="btn btn-secondary dropdown-toggle btn-sm" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                    Our Locations
                                </a>

                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <li><a class="dropdown-item" href="#">Tel Aviv</a></li>
                                    <li><a class="dropdown-item" href="#">New York</a></li>
                                    <li><a class="dropdown-item" href="#">Tokyo</a></li>
                                    <li><a class="dropdown-item" href="#">Paris</a></li>
                                </ul>
                            </li>

                        </ul>
                        <div class="d-grid gap-2 d-md-flex">
                            <button type="button"class="btn btn-outline-warning">Sign In</button>
                            <button herf="Users/Login" class="btn btn-outline-warning">Login</button>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>




    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--Footter-->
    <div class="container-fluid pb-0 mb-0 text-light ">
        <footer id="footer">
            <div class="row my-1 justify-content-center justify-content-lg-center">
                <div class="col-11">
                    <div class="row ">

                        <div class="col-xl-2 col-md-4 col-sm-4 col-12">
                            <h4 class="contact mb-lg-4 bold-text "><b>Contact Us:</b></h4>
                        </div>
                        <div class="col-xl-2 col-md-4 col-sm-4 col-12 justify-content-center">

                            <ul class="list-unstyled contact-info">
                                <li>+972 545 999339</li>
                                <a href="mailto:emil@kollek.net">emil@kollek.net</a>
                            </ul>
                        </div>
                        <div class="col-xl-8 col-md-4 col-sm-4 col-12 my-auto mx-auto a">
                            <h3 class="text-muted mb-md-0 mb-5 bold-text" style="margin-left:100px">Join Our Community</h3>
                            <div class="social-links">
                                <a href="#" class="fa fa-facebook"></a>
                                <a href="#" class="fa fa-twitter"></a>
                            </div>
                        </div>


                    </div>

                </div>
            </div>
        </footer>
    </div>







    <script src="~/lib/jquery/dist/jquery.min.js"></script>



    <!-- JavaScript Bundle with Popper -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
