@model IEnumerable<Petstaurant.Models.FoodGroup>

@{
    ViewData["Title"] = "Index";
}

<style>
    .table a {
        color: #FFC107 !important;
    }
</style>

<h1 class="text-warning">Food Group List</h1>

<p>
    <a type="button" style="font-weight:bold;" class="btn btn-warning btn-sm" asp-action="Create">Create New Food Group</a>
</p>
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
             
                <td>
                    <div class="container justify-content-end d-grid gap-1 d-md-flex">
                        <a class="fa bi bi-pen" asp-action="Edit" asp-route-id="@item.Id"></a> |
                        <a class="fa bi bi-eye" asp-action="Details" asp-route-id="@item.Id"></a> |
                        <a class="fa bi bi-trash" asp-action="Delete" asp-route-id="@item.Id"></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
