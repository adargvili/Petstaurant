@model Petstaurant.Models.Cart

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cart</h4>
    <hr />
    <dl class="row">
        <table>
            <thead>
                <tr class="row">
                    <th class="product-th col-1">Dish</th>
                    <th class="quy-th col-2">Quantity</th>
                    <th class="total-th col-2">Price</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.CartItems != null)
                {
                    @foreach (var ci in Model.CartItems)
                    {
                        <tr id="@ci.Id" class="row mt-3">
                            <td class="col-1">
                                <div class="row">
                                    <div class="pc-title col-8">
                                        <div>
                                            <h4>@ci.Dish.Name</h4>
                                            <p>$@ci.Dish.Price</p>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="quy-col col-2">
                                <div class="quantity">
                                    <div class="pro-qty row">
                                        <a asp-action="AddOne" asp-controller="Carts" asp-route-id="@ci.Id" class="site-btn">+</a>
                                        <input type="text" disabled class="qu-col col-4" value="@ci.Quantity"/>
                                        <a asp-action="SubtractOne" asp-controller="Carts" asp-route-id="@ci.Id" class="site-btn">-</a>
                                    </div>
                                </div>
                            </td>
                            <td class="total-col col-2"><h4>$@ci.Price</h4></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <br />
        <br />
        <br />
        <br />
        <br />
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Create" asp-controller="CartItems" class="site-btn">Add another item to cart</a>
    <a asp-action="Create" asp-controller="Orders" class="site-btn">Order now</a>
</div>
