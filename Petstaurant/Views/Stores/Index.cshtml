@model IEnumerable<Petstaurant.Models.Store>

@{
    ViewData["Title"] = "Index";
}

<style>
    .table a {
        color: #FFC107 !important;
    }
</style>

<h1 class="text-warning">Stores List</h1>


<p>
    <a type="button" style="font-weight:bold;" class="btn btn-warning btn-sm" asp-action="Create">Create New Store</a>
</p>
<h3 class="text-warning" style=" background: rgba(0,0,0, 0.3);">Dear Admin, in order to add a new location page, please contact your web developer</h3>
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                <a class="fa bi bi-pen" asp-action="Edit" asp-route-id="@item.Id"></a>
                <a class="fa bi bi-eye" asp-action="Details" asp-route-id="@item.Id"></a> |
                <a class="fa bi bi-trash" asp-action="Delete" asp-route-id="@item.Id"></a>
            </td>
        </tr>
}
    </tbody>
</table>
