@model Petstaurant.Models.Store

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-warning">Create a New Store</h1>

<div class="row">
    <div class="col-md-4">
        <form id="storeValidation" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input id="city" asp-for="City" class="form-control" />
                <span id="cityError" asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input id="address" asp-for="Address" class="form-control" />
                <span id="addressError" asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label"></label>
                <input id="postalCode" asp-for="PostalCode" class="form-control" />
                <span id="postalCodeError" asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dish" class="control-label"></label>
                <select asp-for="Dish" class="form-control" asp-items="ViewBag.Dish"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-warning" />
            </div>
        </form>
        @if (ViewBag.Error != null)
        {
            <div class="text-danger">@ViewBag.Error</div>
        }
    </div>
</div>

<div>
    <a style="color: #FFC107 !important;" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/store.js"></script>
    <script src="~/js/multiselect.js"></script>
}
