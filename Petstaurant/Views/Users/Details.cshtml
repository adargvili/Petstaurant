@model Petstaurant.Models.User

@{
    ViewData["Title"] = "Details";
}

<div>
    <div>
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-6 col-md-12">
                <div class="card user-card">
                    <div class="row">
                        <div class="col-sm-4 iconBackground user-profile">
                            <div class="card-block text-center">
                                <div class="iconMargin"> <img src="https://img.icons8.com/office/100/000000/dog.png" class="img-radius" alt="User-Profile-Image"> </div>
                                <h6>@Html.DisplayFor(model => model.Name)</h6>
                                @if (ViewBag.UserAdmin == UserType.Admin)
                                {
                                    <p>@Html.DisplayFor(model => model.UserType)</p>
                                }
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class=".marginB20px userName bottomLine">Information</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="text-Bottom-Margin">Email</p>
                                        <h6 class="text-color">@Html.DisplayFor(model => model.UserName)</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="text-Bottom-Margin">Birth Date</p>
                                        <h6 class="text-color">@Html.DisplayFor(model => model.BirthDate)</h6>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="text-Bottom-Margin">Gender</p>
                                        <h6 class="text-color">@Html.DisplayFor(model => model.Gender)</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="text-Bottom-Margin">Registered</p>
                                        <h6 class="text-color">@Html.DisplayFor(model => model.Registered)</h6>
                                    </div>
                                </div>
                                <div class="row">
                                    <a class="text-info" asp-action="Edit" asp-route-id="@Model.UserName">Edit Profile</a>
                                    @if (ViewBag.UserAdmin == UserType.Admin)
                                    {
                                        <a class="text-info" asp-action="Index">Petstaurant Users List</a>
                                        <a class="text-info" data-bs-toggle="offcanvas" href="#offcanvas" role="button" aria-controls="offcanvasExample">
                                            Quick Tweet to PetStaurant's Account
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvas" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header text-dark">
        <h5 class="offcanvas-title twt-head" id="offcanvasExampleLabel">Quick Tweet Our Business Account</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <form id="tweet-form">
        <div class="offcanvas-body text-dark">
            <div class="mb-3">
                <textarea class="form-control" id="tweetData" name="tweetData" rows="3"></textarea>
            </div>
            <div>
                <button type="submit" asp-action="Tweet" class="btn twt">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-twitter" viewBox="0 0 16 16">
                        <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"></path>
                    </svg>
                    Tweet
                </button>
            </div>
        </div>
    </form>
</div>


@section StyleSheets {
    <link rel="stylesheet" href="~/css/profile.css" />
}

@section Scripts {
    <script src="~/js/tweet.js"></script>
}