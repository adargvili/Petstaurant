@model IEnumerable<Petstaurant.Models.User>

@{
    ViewData["Title"] = "Index";
}



<style>
    .table a {
        color: #FFC107 !important;
    }

</style>
<h1 class="text-warning">Account's List</h1>
<br />
<form id="search-form" asp-action="Search">

    <div class="row">
        <div class="col-3">
            <div class="p-1 input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-sm">User Name</span>
                <input id="queryUserName" name="queryUserName" placeholder="Enter User Name" type="text" class="form-control" aria-label="User Name Input" aria-describedby="inputGroup-sizing-sm" autocomplete="off">
            </div>
        </div>
        <div class="col-3">
            <div class="p-1 input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-sm">Name</span>
                <input id="queryName" name="queryName" placeholder="Enter Name" type="text" class="form-control" aria-label="Name Input" aria-describedby="inputGroup-sizing-sm" autocomplete="off">
            </div>
        </div>
        <div class="col-3">
            <div class="p-1 input-group mb-3">
                <select class="form-select" id="selectType" name="selectType" aria-label="Select Type">
                    <option value=@null selected>Select User Type</option>
                    <option value="Customer">Customer</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>
        </div>
        <div class="col-3">
            <div class="p-1">
                <input type="submit" value="Search" class="btn btn-warning" />
            </div>
        </div>
    </div>
</form>
<br />
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Registered)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserType)
                </td>
                <td>
                    <div class="container justify-content-center d-grid gap-1 d-md-flex">
                        <a class="fa bi bi-pen" asp-action="Edit" asp-route-id="@item.UserName"></a>
                        <a class="fa bi bi-eye" asp-action="Details" asp-route-id="@item.UserName"></a>
                        <a class="fa bi bi-trash" asp-action="Delete" asp-route-id="@item.UserName"></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script src="~/js/searchUser.js"></script>
}
