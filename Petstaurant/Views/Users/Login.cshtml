@model Petstaurant.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<style>

      .container {
        padding-top: 7% !important;
    }


</style>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h1>Login</h1>
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" autocomplete="off" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
            @if (ViewBag.Error != null)
            {
                <div class="text-danger">@ViewBag.Error</div>
            }



            <div>
                Not registered? <a asp-action="Register">Click here</a> to register
            </div>
        </div>
        <div class="col-md-2">

        </div>
        <div class="col-md-6">
            <h3 class="vidtit display-7 text-center">Our Customers Reviews</h3>
            <video width="512" height="290" autoplay muted>
                <source src="/video/DogReviews.mp4#t=00:02:48" type="video/mp4">
                <source src="movie.ogg" type="video/ogg">
                Your browser does not support the video tag.
            </video>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
