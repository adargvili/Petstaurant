@model Petstaurant.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-warning">We're almost done!</h2>

<h5 class="text-warning">Fill in your details</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="orderValidation" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CreditCard" class="control-label"></label>
                <input type="password" asp-for="CreditCard" class="form-control" />
                <span asp-validation-for="CreditCard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreId" class="control-label"></label>
                <select asp-for="StoreId" class="form-control" asp-items="ViewBag.StoreId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input id="address" asp-for="Address" class="form-control" />
                <span id="addressError" asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label"></label>
                <input id="postalCode" asp-for="PostalCode" class="form-control" />
                <span id="postalCodeError" asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-controller="Carts" asp-action="Details" class="site-btn btn btn-warning job">Back to cart</a>
                <input type="submit" value="Send your order" class="btn btn-warning job" />
            </div>
        </form>
        @if (ViewBag.Error != null)
        {
            <div class="text-danger">@ViewBag.Error</div>
        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
     <script src="~/js/createOrder.js"></script>
}
