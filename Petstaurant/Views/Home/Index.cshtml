@{
    ViewData["Title"] = "Home Page";
}

<div class="home_main_container container">
    <a asp-action="Shop" asp-controller="FoodGroups" asp-route-id="1"><h1 class="main-header-home">Welcome to Petstaurant!</h1></a>
    <div class="row city_degrees">
        <div class=" telaviv col-3">
            <h3>Tel-Aviv</h3>
            <span class="badge-pill city"></span>
        </div>
        <div class="badge-pill newyork col-3">
            <h3>New-York</h3>
            <span class="newyork-degree city"></span>
        </div>
        <div class="badge-pill paris col-3">
            <h3>Paris</h3>
            <span class="badge-pill city"></span>
        </div>
        <div class="degree_card tokyo col-3">
            <h3>Tokyo</h3>
            <span class="badge-pill city"></span>
        </div>
    </div>

    <video autoplay muted loop id="myVideo">

        <source src="./css/video.mp4" type="video/mp4">
    </video>
</div>